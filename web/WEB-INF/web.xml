<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
<!--注册-->
    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>register</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
<!--登录-->
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
<!--注销-->
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>logout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
<!--    用户信息接口-->
    <servlet>
        <servlet-name>get_message</servlet-name>
        <servlet-class>get_message</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>get_message</servlet-name>
        <url-pattern>/getmessage</url-pattern>
    </servlet-mapping>
<!--    头像上传接口-->
    <servlet>
        <servlet-name>avatarUpload</servlet-name>
        <servlet-class>avatarUpload</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>avatarUpload</servlet-name>
        <url-pattern>/avatarUpload</url-pattern>
    </servlet-mapping>
</web-app>